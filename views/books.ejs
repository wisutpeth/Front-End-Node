<!-- books.ejd -->
<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
</head>
<body>
    <h1>Books</h1>
    <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        <% for(var i=0; < books.length; i++) { %>
        <tr>
            <td><%= books[i].title %=</td>
            <td><%= books[i].author %=</td>
            <td>
                <a href="/book/<%= books[i].id %>">View</a>
                <a href="/update/<%= books[i].id %>">Edit</a>
                <a href="/delete/<%= books[i].id %>">Delete</a>
            </td>
        </tr>
        <% } %>
    </table>
    <a href="/create">Create New Book</a>
</body>
</html>